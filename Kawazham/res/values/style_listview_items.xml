<resources>
	<style name="headerListItem" parent="@android:style/Widget.TextView"  
    	xmlns:android="http://schemas.android.com/apk/res/android" >
    	<item name="android:textSize">@dimen/text_size_header_list</item>
    	<item name="android:textColor">@color/white</item>
    	<item name="android:background">@color/gray</item>
    	<item name="android:textStyle">bold</item>
	</style>
	
	<style name="itemListItem01" parent="@android:style/Widget.TextView" xmlns:android="http://schemas.android.com/apk/res/android">
    	<item name="android:textSize">@dimen/text_size_header_list</item>
    	<item name="android:textColor">@color/black</item>
    	<item name="android:background">@color/transparent</item>
    	<item name="android:textStyle">bold</item>
	</style>
			
	<style name="itemListItem02" parent="@android:style/Widget.TextView" xmlns:android="http://schemas.android.com/apk/res/android">
    	<item name="android:textSize">@dimen/text_size_item_list</item>
    	<item name="android:textColor">@color/black</item>
    	<item name="android:background">@color/transparent</item>
    	<item name="android:textStyle">normal</item>
	</style>
	
			
	<style name="itemListItem03" parent="@android:style/Widget.TextView" xmlns:android="http://schemas.android.com/apk/res/android">
    	<item name="android:textSize">@dimen/text_size_item_list</item>
    	<item name="android:textColor">@color/black</item>
    	<item name="android:background">@color/transparent</item>
    	<item name="android:textStyle">italic</item>
	</style>	
</resources>